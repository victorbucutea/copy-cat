<UserControl x:Class="CopyCat.TrayTooltip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:CopyCat"
             mc:Ignorable="d" >
    <UserControl.Resources>
        <BitmapImage x:Key="CatPixel"  UriSource="pack://application:,,,/Resources/cat_pixel_base.png"/>
    </UserControl.Resources>
    <materialDesign:ColorZone Mode="Inverted" Padding="10"  CornerRadius="4" >
        <DockPanel>
            <StackPanel Orientation="Vertical" >

                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left"><Run Name="TitleView" /></TextBlock>

                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center"><Run Name="MessageView" /></TextBlock>

            </StackPanel>
        </DockPanel>
    </materialDesign:ColorZone>
</UserControl>
